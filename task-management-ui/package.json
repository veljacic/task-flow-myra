  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc -b && vite build",
    "lint": "eslint src/**/*.tsx",
    "lint:fix": "eslint src/**/*.tsx --fix",
    "preview": "vite preview",
    "format": "prettier --write src/**/*.tsx",
